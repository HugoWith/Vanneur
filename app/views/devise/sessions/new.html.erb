<div class="container-signin">


  <div class="form-signin">
<h2>Mets le contact ðŸ˜Š</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">

      <%= f.input :email,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "email" } %>
      <%= f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="d-flex justify-content-around form-actions">
      <%= f.button :submit, "Log in", class: 'create-button' %>

    </div>
    <div class="d-flex justify-content-center button-signin"> <%= render "devise/shared/links" %> </div>

    <% end %>

  </div>
  <div class="img-signin-div">
    <img src="https://media.giphy.com/media/3o7WIAwEIpiH58BQYM/giphy.gif" alt="van-gif">
  </div>


</div>
