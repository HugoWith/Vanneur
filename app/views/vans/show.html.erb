
<body class="van-show">




  <div class=" d-flex bg-img banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('<%= cl_image_path @van.image, height: 300, width: 400, crop: :fill %>')">
    <h2 id="H">Book this Van!</h2>
  </div>

  <div class="container-show-van">


  <div class="cards-userVan">
    <div class="card-category-infos">
     <img class="avatar-a" alt="avatar" src="https://ca.slack-edge.com/T02NE0241-U3HFUV8DA-63795d118b7b-72" />
     <p><strong><em>Propriétaire:</em></strong> <%= @van.owner.first_name %> <%= @van.owner.last_name %></p>
     <p><strong><em>Ville:</em></strong> <%= @van.town %></p>
     <p><strong><em>Disponibilité:</em></strong> <%= @van.availability %></p>
     <p><strong><em>Prix:</em></strong> <%= @van.prices %>€/jour</p>
     <img class= "imgvan" src="https://media.giphy.com/media/3o7WIAwEIpiH58BQYM/giphy.gif" alt="van-gif">
   </div>

   <div class="card-category-infos">
    <h2>On book par là 😇:</h2>
    <%= simple_form_for :search, method: "get" do |f| %>
    <%= f.input :début, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :fin, as: :string, required: false, input_html: {class: "datepicker"} %>
    <% end %>
  </div>
</div>


<div class="d-flex justify-content-between ">

<div class="create-button" id="contact-show">
  <a href="stetienne@yahoo.fr">Contacte Kev Cha 📬</a>
</div>

<div class="button-booking">
<%= link_to "Réserver ce Van", van_rentals_path(@van), class: "create-button", method: :post %>
<%= link_to "Retour à la Vannerie 🏎", vans_path(@vans), class: "create-button", method: :get %>
</div>
</div>
</div>
</div>

</body>
